{
    "name": "clean",
    "version": "1.0.0",
    "description": "Just clean Typescript Project",
    "main": "src/index.tsx",
    "author": "Aziz Zainutdin",
    "license": "MIT",
    "private": false,
    "scripts": {
        "lint:ts": "tslint --config ./tslint.json src/**/*",
        "lint:staged": "lint-staged",
        "start:dev": "yarn lint:ts && yarn test && yarn start:dev-server",
        "start:dev-server": "webpack-dev-server -w --config ./webpack.config.js",
        "start": "webpack --config ./webpack.config.js",
        "test": "jest --verbose --coverage --env=jsdom"
    },
    "pre-commit": "lint:staged",
    "lint-staged": {
        "concurrent": true,
        "chunkSize": 50,
        "linters": {
            "src/**/*.tsx": [
                "lint:ts",
                "git add"
            ],
            "assets/styles/**/*.scss": [
                "stylelint --syntax scss",
                "git add"
            ]
        }
    },
    "devDependencies": {
        "@types/jest": "^22.1.3",
        "@types/react": "^16.0.38",
        "@types/react-dom": "^16.0.4",
        "@types/react-redux": "^5.0.15",
        "@types/react-router": "^4.0.22",
        "awesome-typescript-loader": "^3.4.1",
        "clean-webpack-plugin": "^0.1.18",
        "css-loader": "^0.28.9",
        "extract-text-webpack-plugin": "^3.0.2",
        "fs": "^0.0.1-security",
        "html-webpack-plugin": "^2.30.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^22.3.0",
        "lint-staged": "^6.1.1",
        "path": "^0.12.7",
        "pre-commit": "^1.2.2",
        "prettier": "^1.10.2",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "resolve-url-loader": "^2.2.1",
        "sass-loader": "^6.0.6",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.20.2",
        "stylelint": "^9.0.0",
        "ts-jest": "^22.0.4",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2",
        "webpack": "^3.11.0",
        "webpack-dev-server": "^2.11.1"
    },
    "dependencies": {
        "node-sass": "^4.7.2",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.7",
        "react-router": "^4.2.0",
        "redux": "^3.7.2"
    },
    "jest": {
        "transform": {
            ".(tsx?)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            "^App/(.*)": "<rootDir>/src/App/$1",
            "^Core/(.*)": "<rootDir>/src/Core/$1",
            "^Modules/(.*)": "<rootDir>/src/Modules/$1",
            "^Components/(.*)": "<rootDir>/src/Components/$1",
            "^assets/(.*)": "<rootDir>/src/assets/$1",
            "\\.(s?[c|a]ss)$": "identity-obj-proxy"
        },
        "mapCoverage": true,
        "testPathIgnorePatterns": [
            "node_modules/",
            "src/assets/"
        ],
        "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$"
    }
}